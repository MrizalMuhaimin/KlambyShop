<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toll="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        android:foreground="?android:attr/selectableItemBackground"

        android:layout_margin="10dp"
        app:cardElevation="7dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/baju_1"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/title_baju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="14sp"
                android:padding="10dp"
                android:textColor="@color/black"
                toll:text="Title Baju bekas"/>

            <TextView
                android:id="@+id/price_baju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="@color/tosca"
                toll:text="Rp. 20.000"/>
            <TextView
                android:id="@+id/place_baju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="14sp"
                android:padding="10dp"
                android:textColor="@color/gray"
                toll:text="KAB. KARAWNG"/>

        </LinearLayout>




        
    </androidx.cardview.widget.CardView>

</LinearLayout>